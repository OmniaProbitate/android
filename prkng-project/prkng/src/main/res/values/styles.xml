<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrkngDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--Lot/Spot Info-->
    <style name="LotAttrsText">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/lot_attrs_text</item>
    </style>

    <!--Authentication-->
    <style name="AuthEditText">
        <!--<item name="android:textColor">@color/color_text</item>-->
        <item name="android:layout_marginBottom">16dp</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_baseColor">@color/petrol2</item>
        <item name="met_primaryColor">@color/red1</item>
    </style>

    <!--Tutorial-->
    <style name="TutorialImage">
        <item name="layout_marginLeftPercent">15%</item>
        <item name="layout_marginRightPercent">15%</item>
        <item name="layout_widthPercent">70%</item>
        <item name="layout_heightPercent">40%</item>
        <item name="layout_marginTopPercent">10%</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BigText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TutorialText" parent="@style/BigText">
        <item name="layout_marginLeftPercent">15%</item>
        <item name="layout_marginRightPercent">15%</item>
        <item name="layout_widthPercent">70%</item>
        <item name="layout_marginTopPercent">55%</item>
    </style>

    <style name="SingLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:capitalize">none</item>
        <item name="android:textColor">@color/petrol1</item>
    </style>

</resources>
