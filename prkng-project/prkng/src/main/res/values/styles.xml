<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- prkng custom theme here -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/color_text</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- prkng custom theme here -->
        <item name="colorPrimary">@color/color_primary_inv</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_inv</item>
        <item name="colorAccent">@color/color_accent_inv</item>
        <item name="android:windowBackground">@color/color_background_inv</item>
    </style>

    <!--<style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; prkng custom theme here &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/color_primary</item>-->
    <!--<item name="colorPrimaryDark">@color/color_primary_dark</item>-->
    <!--<item name="colorAccent">@color/color_accent</item>-->
    <!--<item name="android:windowBackground">@color/color_background_inv</item>-->
    <!--</style>-->

    <style name="AppTheme.White" parent="Theme.AppCompat.Light">
        <!-- prkng custom theme here -->
        <item name="colorPrimary">@color/cream1</item>
        <item name="colorPrimaryDark">#9E9E9E</item>
        <item name="colorAccent">@color/red2</item>
        <!--<item name="android:textColorPrimary">@color/petrol2</item>-->
        <!--<item name="android:textColorSecondary">@color/petrol1</item>-->
        <!--<item name="android:editTextColor">@color/petrol2</item>-->
        <!--<item name="android:button">@color/petrol2</item>-->
        <item name="android:windowBackground">@color/cream1</item>
        <item name="actionBarStyle">@style/AppTheme.White.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.White.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="AppTheme.NoStatusBar" parent="AppTheme.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="PrkngDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--Lot/Spot Info-->
    <style name="LotAttrsText">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/lot_attrs_text</item>
    </style>

    <!--Authentication-->
    <style name="AuthEditText">
        <!--<item name="android:textColor">@color/color_text</item>-->
        <item name="android:layout_marginBottom">16dp</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_baseColor">@color/petrol2</item>
        <item name="met_primaryColor">@color/red1</item>
    </style>

    <!--Tutorial-->
    <style name="TutorialImage">
        <item name="layout_marginLeftPercent">15%</item>
        <item name="layout_marginRightPercent">15%</item>
        <item name="layout_widthPercent">70%</item>
        <item name="layout_heightPercent">40%</item>
        <item name="layout_marginTopPercent">10%</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BigText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TutorialText" parent="@style/BigText">
        <item name="layout_marginLeftPercent">15%</item>
        <item name="layout_marginRightPercent">15%</item>
        <item name="layout_widthPercent">70%</item>
        <item name="layout_marginTopPercent">50%</item>
    </style>

    <style name="SingLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>

    </style>

</resources>
